    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://1911019.netlify.app" />
    <meta
      property="twitter:title"
      content="Triễn lãm origami - {{ title }}"
    />
    <meta property="twitter:description" content="{{ title }}" />
    <meta property="twitter:image" content="https://1911019.netlify.app/images/4l9li2edited.jpg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="shortcut icon" href="/svg/favicon.svg" type="image/svg+xml" />
  </head>
  <body>
    {{ content | safe }}
    <script>
      var scrollToTopBtn = document.querySelector(".totop");
      var rootElement = document.documentElement;

      function handleScroll() {
        var scrollTotal = rootElement.scrollHeight - rootElement.clientHeight;
        if (rootElement.scrollTop / scrollTotal > 0.3) {
          scrollToTopBtn.classList.add("show");
        } else {
          scrollToTopBtn.classList.remove("show");
        }
      }

      function scrollToTop() {
        rootElement.scrollTo({
          top: 0,
          behavior: "smooth",
        });
      }
      scrollToTopBtn.addEventListener("click", scrollToTop);
      document.addEventListener("scroll", handleScroll);
    </script>
  </body>
</html>
